<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title"
        android:layout_alignBottom="@+id/title"
        android:layout_marginLeft="10dp"
        android:background="#FFFFFF"
        android:src="@drawable/baseline_arrow_back_24" />


    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Item Page"
        android:textSize="22sp"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <!-- Main Image -->
    <ImageView
        android:id="@+id/mainImageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/title"
        android:background="@color/black"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>

    <!-- Item Name -->
    <TextView
        android:id="@+id/itemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_below="@id/mainImageView"
        android:layout_alignStart="@id/description"
        android:layout_margin="5dp"/>



    <!-- Price -->
    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainImageView"
        android:layout_alignEnd="@id/description"
        android:background="#00A3FF"
        android:gravity="left"
        android:padding="10dp"
        android:text="Price: $100"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_margin="5dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet. Et autem accusantium aut molestias officia ut vero omnis! Aut unde sapiente aut quia rerum rem sapiente molestiae sed iure cumque et velit quia et adipisci nemo."
        android:padding="8dp"
        android:layout_below="@id/itemNameTextView"
        android:layout_centerHorizontal="true"
        />


    <!-- Seller Info and Rating -->

    <RelativeLayout
        android:id="@+id/sellerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_below="@id/images"
        android:layout_alignStart="@id/description">

        <!-- Seller Profile Picture -->
        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:src="@drawable/baseline_person_24"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"/>

        <!-- Seller Name -->
        <TextView
            android:id="@+id/sellerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seller Name"
            android:layout_toEndOf="@id/profilePicture"
            android:layout_alignTop="@id/profilePicture"/>

        <!-- Seller Rating -->
        <TextView
            android:id="@+id/sellerRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: 4.2"
            android:layout_toEndOf="@id/profilePicture"
            android:layout_below="@id/sellerName"/>

        <!-- Seller Email -->
        <TextView
            android:id="@+id/sellerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seller@example.com"
            android:layout_below="@id/profilePicture"
            android:layout_alignStart="@id/sellerName"/>

        <!-- Seller Phone Number -->
        <TextView
            android:id="@+id/sellerPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123-456-7890"
            android:layout_below="@id/sellerEmail"
            android:layout_alignStart="@id/sellerName"/>

    </RelativeLayout>


    <!-- Images -->
    <LinearLayout
        android:id="@+id/images"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/description"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>


    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sellerInfo"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/addToFavoritesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add to Favorites" />

        <Button
            android:id="@+id/requestButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00A3FF"
            android:text="Request Item"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>